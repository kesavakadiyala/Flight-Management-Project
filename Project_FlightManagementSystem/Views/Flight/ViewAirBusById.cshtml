@model Project_FlightManagementSystem.Models.FMS_tbl_AirBusDetails
@{
    ViewBag.Title = "VIEW";
}
<style>
    body {
        background-image: url('../../scripts/legacy_500_firstflight_parked.jpg');
        background-position: inherit;
        background-repeat: no-repeat;
        background-size: 100% 180%;
    }

    
</style>


<h2>VIEW AIRBUS DETAILS</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body>
        <br /><br /><br />
        <div class="container">
            <div class="row">

                <div style="text-align:center;color:red">
                    @ViewBag.Messag
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })<br /><br /><br /><br /><br />
                <div class="col-md-offset-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AirBusId, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.AirBusId, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.AirBusId, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5" id="id">
                    <input type="submit" value="Search" name="View" class="btn btn-default btn-primary" />
                </div>
            </div>
        </div>
    </body>
}