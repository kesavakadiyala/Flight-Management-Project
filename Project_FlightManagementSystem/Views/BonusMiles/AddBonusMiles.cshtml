@model Project_FlightManagementSystem.Models.FMS_tbl_BonusMilesDEtails

@{
    ViewBag.Title = "AddDetails";
}
<script type="text/javascript">
    if (document.getElementById('BonusMiles').textContent == null) {
        alert("Flight Name is required.");
    }
</script>

<style>
    body {
        background-image: url('../../scripts/B747-crashed.jpg');
        background-position: inherit;
        background-repeat: no-repeat;
        background-size: 100% 180%;
    }
</style>

<h2>Add Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body>
        <div class="Container" style="background-color:white">
            <br /><br /><br />
            <div class="text-center" style="color:green">
                @ViewBag.Msg
            </div>
            <div class="text-center" style="color:red">
                @ViewBag.Messag
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row col-sm-offset-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.FlightScheduleId, "FlightScheduleId", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.FlightScheduleId, (SelectList)ViewBag.list, "Select", htmlAttributes: new { @class = "form-control", id = "FlightScheduleId", onchange = "this.form.submit();" })
                    @Html.ValidationMessageFor(model => model.FlightScheduleId, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BonusMiles, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.BonusMiles, new { htmlAttributes = new { @class = "form-control", id = "BonusMiles" } })
                    @Html.ValidationMessageFor(model => model.BonusMiles, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="submit" value="Add" name="create" onclick="return validate()" class="btn btn-default btn-primary" />
                    </div>
                </div>
            </div>
            <br /><br />
        </div>
    </body>
}

