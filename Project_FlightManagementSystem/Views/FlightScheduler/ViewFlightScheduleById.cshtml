@model Project_FlightManagementSystem.Models.FMS_tbl_FlightScheduleDetails
@{
    ViewBag.Title = "VIEW";
}
<style>
  
    #add {
        background-image: url('../../scripts/WHDQ-512383449.jpg');
        background-position: inherit;
        background-repeat: no-repeat;
        background-size: 100% 180%;
    }



   
</style>

<h2>Search Flight Scheduling By Id</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <body id="add">
        <br />
        <div class="container">
            <div class="row">
                <div class="text-center" style="color:red">
                    @ViewBag.Messag
                </div>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })<br /><br /><br /><br /><br />
                <div class="col-md-offset-4">
                    <div class="form-group">

                        @Html.LabelFor(model => model.FlightScheduleId, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.FlightScheduleId, new { htmlAttributes = new { @class = "form-control" ,@required="required"} })
                        @Html.ValidationMessageFor(model => model.AirBusId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5" id="id">
                    <input type="submit" value="Search" name="Edit" class="btn btn-default btn-primary" />
                </div>
            </div>
        </div>

    </body>
}
