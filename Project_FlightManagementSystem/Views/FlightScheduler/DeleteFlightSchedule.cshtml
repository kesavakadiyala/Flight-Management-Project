                    <dd>
                        @Html.DisplayFor(model => model.TAX)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Distance)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Distance)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.stats)
                    </dt>

                    <dd>
                        @if (Model.stats == true)
                        {
                            <label>Scheduled</label>
                        }
                        else if (Model.stats == false)
                        {
                            <label>Cancelled</label>
                        }
