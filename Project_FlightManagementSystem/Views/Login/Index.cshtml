@model Project_FlightManagementSystem.Models.FMS_tbl_EmployeeLogin

@{
    ViewBag.Title = "Login";
}
<style type="text/css">
    #img {
        background-image: url('../../scripts/samolet.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: 100% 160%;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()    <br /><br /><br /><br /><br /><br /><br /><br />
    <body id="img">

        <div class="container col-md-6 col-md-offset-3" style="background-color: transparent;  max-height: 600px;  border-radius: 0px 50px; padding: 40px 80px 40px 130px">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName)
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control input-lg", required="UserName is Required." } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>


            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Pasword)
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        @Html.EditorFor(model => model.Pasword, new { htmlAttributes = new { @class = "form-control input-lg", required = "UserName is Required." } })
                        @Html.ValidationMessageFor(model => model.Pasword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input class="btn btn-success btn-lg" type="submit" value="Login">
                    <input class="btn btn-danger btn-lg" type="reset" value="Cancel">
                </div>
            </div>
        </div>

    </body>
}